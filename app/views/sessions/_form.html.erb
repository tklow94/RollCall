
                <%= form_with(scope: :session, url: login_path, class: "col s12 center", local: true) do |f| %>
                        <div class="row ">
                            <div class="input-field col s8 offset-s2">
                            <%= f.label :name %>
                            <%= f.text_field :name, class: "validate"%>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s8 offset-s2">
                            <%= f.label :password %>
                            <%= f.password_field :password, class:"validate" %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                           <%= f.submit("Login", class: "btn waves-effect waves-light") %>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>