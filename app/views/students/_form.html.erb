<%= render 'shared/errors', obj: @student%>
<div class="row">
  <div class="col s12">
    <h1 class="center-align"><%= @student.new_record? ? "Sign up" : "Edit Profile" %></h1>
  </div>
</div>

                <%= form_for(@student, html:{class: "col s12 center"}) do |f| %>
                        <div class="row ">
                            <div class="input-field col s8 offset-s2">
                            <%= f.label :name %>
                            <%= f.text_field :name, class: "validate"%>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s8 offset-s2">
                            <%= f.label :email %>
                            <%= f.email_field :email, class: "validate" %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                           <%= f.submit(@student.new_record? ? "Sign up" : "Save Changes", class: "btn waves-effect waves-light") %>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
