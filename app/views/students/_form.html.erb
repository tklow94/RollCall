<div class="valign-wrapper" style="width:100%;height:100%;position: absolute;">
    <div class="valign" style="width:100%;">
        <div class="container">
            <div class="row">
                <%= form_with(model: @student, class: "col s12 center", local: true) do |f| %>
                <div class="card">
                    <div class="card-content">
                     <div class="row ">
                           <span class="card-title black-text">Sign up</span>
                        </div>
                        <div class="row ">
                            <div class="input-field col s8 offset-s2">
                            <%= f.label :name %>
                            <%= f.text_field :name, class: "validate"%>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s8 offset-s2">
                            <%= f.label :password %>
                            <%= f.password_field :password, class:"validate" %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s8 offset-s2">
                            <%= f.label :email %>
                            <%= f.email_field :email, class: "validate" %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                           <%= f.submit("Submit", class: "btn waves-effect waves-light") %>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>