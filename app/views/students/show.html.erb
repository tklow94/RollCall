<div class="row">
  <div class="col s12">
    <h1 class="center-align"><%= @student.name %>'s Profile</h1>
  </div>
</div>
<div class="container">
<div class="row sign-up-form">
    <div class="col s6 m6">
      <div class="card teal darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= @student.name %></span>
          <p><%= @student.email %></p>
          <p>Course Enrollments: 
            <% if @student.courses.empty? %>
              None
              <% else %>
                <ul>
                  <% @student.courses.each do |course| %>
                  <li><%= course.title %></li>
                  <% end %>
                </ul>
            <% end %>
          </p>
        </div>
      </div>
      <% if current_user == @student%>
        <%= link_to '<i class="material-icons right">edit</i>Edit your profile'.html_safe, edit_student_path(@student), class:"waves-effect waves-light btn" %>
      <% end %>
    </div>
</div>
</div>